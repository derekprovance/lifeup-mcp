{
    "name": "lifeup-mcp-server",
    "version": "1.0.0",
    "description": "MCP Server for LifeUp Cloud API integration with Claude",
    "type": "module",
    "main": "build/index.js",
    "bin": {
        "lifeup-mcp": "build/index.js"
    },
    "scripts": {
        "build": "tsc",
        "watch": "tsc --watch",
        "start": "node build/index.js",
        "dev": "tsx watch src/index.ts",
        "inspect": "node build/index.js",
        "test": "vitest",
        "test:watch": "vitest --watch",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "test:run": "vitest run",
        "lint": "eslint src tests --ext .ts,.tsx",
        "lint:fix": "eslint src tests --ext .ts,.tsx --fix",
        "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
    },
    "keywords": [
        "mcp",
        "lifeup",
        "task-management",
        "claude"
    ],
    "author": "Derek Provance",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.0.0",
        "axios": "^1.6.0",
        "dotenv": "^16.3.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^6.13.2",
        "@typescript-eslint/parser": "^6.13.2",
        "@vitest/coverage-v8": "^4.0.16",
        "@vitest/ui": "^4.0.16",
        "eslint": "^8.55.0",
        "prettier": "^3.1.1",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "vitest": "^4.0.16"
    }
}
